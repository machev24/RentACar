@model CarDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Car Details</h1>

<hr />
<div>
    <dl class="dl-horizontal">
        <dt>Brand:</dt>
        <dd>@Model.Brand</dd>
        <dt>Model:</dt>
        <dd>@Model.Model</dd>
        <dt>Year:</dt>
        <dd>@Model.Year</dd>
        <dt>Passenger Seats:</dt>
        <dd>@Model.PassengerSeats</dd>
        <dt>Description:</dt>
        <dd>@Model.Description</dd>
        <dt>Price Per Day:</dt>
        <dd>@Model.PricePerDay</dd>
    </dl>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}