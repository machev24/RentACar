@model IEnumerable<RequestListingViewModel>

@{
    ViewData["Title"] = "My Cars";
    const string dateFormat = "dd MMM yyyy hh:mm:ss";
}

<h2>My Cars</h2>

<table class="table">
    <tr>
        <th>#</th>
        <th>Brand</th>
        <th>Model</th>
        <th>Year</th>
        <th>Passenger Seats</th>
        <th>Ordered On</th>
    </tr>

    @{
        var requests = Model as RequestListingViewModel[] ?? Model.ToArray();
    }
    @for (int i = 0; i < requests.Length; i++)
    {
        var request = requests[i];

        <tr>
            <th>@(i + 1)</th>
            <td>@request.Car.Brand</td>
            <td>@request.Car.Model</td>
            <td>@request.Car.Year</td>
            <td>@request.Car.PassengerSeats</td>
            <td>@request.OrderedOn.ToString(dateFormat)</td>
        </tr>
    }
</table>