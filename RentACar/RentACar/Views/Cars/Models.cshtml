@model List<string>

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Brand Models</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .model-item {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Models for @ViewBag.Brand</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                @foreach (var modelName in ViewBag.CarModels)
                {
                    <div class="model-item">
                        <h4> @modelName </h4>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
